{
  "version": 2,
  "builds": [
    { "src": "package.json", "use": "@vercel/static-build" }
  ],
  "routes": [
    { 
      "src": "^/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    { 
      "src": "^/(.*)\\.(?:ico|png|jpg|jpeg|gif|svg|css|js)$",
      "headers": { "cache-control": "public, max-age=31536000, immutable" }
    },
    { 
      "src": "/(.*)",
      "dest": "/index.html",
      "headers": { 
        "cache-control": "public, max-age=0, must-revalidate"
      }
    }
  ]
}